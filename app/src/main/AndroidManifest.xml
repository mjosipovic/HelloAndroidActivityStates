<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mladen.helloandroidactivitystates" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.mladen.helloandroidactivitystates.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.mladen.helloandroidactivitystates.MainActivity2"
            android:label="@string/title_activity_main_activity2" >
        </activity>
        <activity
            android:name="com.example.mladen.helloandroidactivitystates.MainActivity3"
            android:label="@string/title_activity_main_activity3" >
        </activity>
        <activity
            android:name="com.example.mladen.helloandroidactivitystates.MainActivity4"
            android:label="@string/title_activity_main_activity4" >
        </activity>
        <activity
            android:name="com.example.mladen.helloandroidactivitystates.MainActivity5"
            android:label="@string/title_activity_main_activity5" >
        </activity>
        <activity
            android:name="com.example.mladen.helloandroidactivitystates.MainLinartActivity"
            android:label="@string/title_activity_main_linart" >
        </activity>
        <activity
            android:name="com.example.mladen.helloandroidactivitystates.MainActivityWithDrawingView"
            android:label="@string/title_activity_main_activity_with_drawing_view" >
        </activity>
        <activity
            android:name="com.example.mladen.helloandroidactivitystates.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.mladen.helloandroidactivitystates.MainGuardGateActivity"
            android:label="@string/title_activity_main_guard_gate" >
        </activity>
    </application>

</manifest>
